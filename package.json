{
	"name": "buffer-ponyfill",
	"description": "Use the Node core buffer module, both in browsers and in Node.",
	"version": "0.1.0",
	"main": "node.js",
	"browser": "browser.js",
	"files": [
		"index.js",
		"node.js",
		"browser.js"
	],
	"keywords": [
		"buffer",
		"ponyfill",
		"isomorphic",
		"browser",
		"node"
	],
	"author": "Jannis R <mail@jannisr.de>",
	"homepage": "https://github.com/derhuerst/buffer-ponyfill",
	"repository": "derhuerst/buffer-ponyfill",
	"bugs": "https://github.com/derhuerst/buffer-ponyfill/issues",
	"license": "ISC",
	"engines": {
		"node": ">=6"
	},
	"dependencies": {
		"buffer": "^5.1.0"
	},
	"devDependencies": {
		"browserify": "^16.2.2",
		"chutney": "^0.2.5",
		"is-in-browser": "^1.1.3",
		"tape": "^4.8.0"
	},
	"scripts": {
		"test": "env NODE_ENV=dev node test/node.js",
		"test:browser": "env NODE_ENV=dev browserify test/browser.js | chutney",
		"prepublishOnly": "npm run test:node && npm run test:browser"
	}
}
